{
  "name": "kleiderer-site",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    
    "build:normalize": "cp node_modules/normalize.css/normalize.css src/_includes/styles",
    "build:sass": "sass src/styles/:src/_includes/styles/",
    "build:eleventy": "npx @11ty/eleventy",
    "build": "npm-run-all build:normalize build:sass build:eleventy",

    "watch:sass": "npm run build:sass -- --watch",
    "watch:eleventy": "npm run build:eleventy -- --serve --port=3838",

    "start": "npm-run-all build:normalize build:sass --parallel watch:*"
  },
